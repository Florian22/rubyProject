<%= form_for(post, url: url) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!--Page edit/new post-->
  <div class="row">
    <div class="col-md-4">
      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, id: :post_title %>
      </div>
      <div class="field">
        <%= form.label :label %>
        <%= form.text_field :label, id: :post_label %>
      </div>
      <div class="field">
        <%= form.label :banner_image_url %>
        <%= form.text_field :banner_image_url %>
      </div>
    </div>
    <div class="col-md-8">
      <div class="field">
        <%= form.text_area :body, id: :post_body %>
      </div>      
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
