<%= form_for(post, url: url) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!--Page edit/new post-->
  <div class="row">
    <div class="col-md-4">
    <!--Card begin-->
      <div class="card" style="width: 20rem;">
        <div class="card-block">
          <% if @post.new_record? %>
            <h4 class="card-title"> New post </h4>
          <% else %>
            <h4 class="card-title">  
              <b>Edit</b> <span><%= @post.title %></span>
            </h4>
          <% end %>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="field">
              <%= form.label :title %>
              <%= form.text_field :title, id: :post_title %>
            </div>  
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :label %>
              <%= form.text_field :label, id: :post_label %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :banner_image_url %>
              <%= form.text_field :banner_image_url %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="actions">
              <%= form.submit "Submit", class: 'btn btn-success btn-mg btn-block' %>
            </div>
          </li>
        </ul>
        <div class="card-block">
          <% if @post.persisted? %>
            <%= link_to 'Show', @post %> |
          <% end %>
          <%= link_to 'Back', authors_posts_path %>
        </div>
      </div>
    <!--Card end-->  
    </div>
    <div class="col-md-8">
      <div class="field">
        <%= form.text_area :body, id: :post_body %>
      </div>      
    </div>
  </div>

  
<% end %>
