<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:page_title) %> | BlogProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=o4hsik5w9xjo457f1fyzvlqtrx3gpm1t5kcrzbqxgmnr3id7"></script>
  </head>

  <body>
  	<%= render 'layouts/navbar' %>
    <% if notice || alert %>
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <% end %>
  	<div class="container <%= controller_name %> <%=action_name%>">
    	<%= yield %>
  	</div>
  </body>
</html>